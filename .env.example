# Couchbase Configuration
CB_CONNECTION_STRING=couchbase://localhost
CB_USERNAME=Administrator
CB_PASSWORD=password
CB_BUCKET=coding-memory

# OpenAI Embeddings (primary)
OPENAI_API_KEY=sk-...
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMS=1536

# Ollama Embeddings (fallback)
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_EMBEDDING_DIMS=768

# General
DEFAULT_PROJECT_ID=default
# Optional explicit workspace id (absolute path recommended).
# If unset, runtime defaults to the current working directory.
CURRENT_PROJECT_ID=/absolute/path/to/your/project
# Default retrieval scope controls:
# - true: search across all projects in memory unless explicitly overridden.
# - false: stay on the current project unless related_project_ids/include_all_projects is provided.
INCLUDE_ALL_PROJECTS_BY_DEFAULT=false
# Optional comma-separated project IDs to include by default for cross-project scope.
# Example: /Users/ruchit/Downloads/cb-retrival,/Users/ruchit/Downloads/local_agent
DEFAULT_RELATED_PROJECTS=

# Startup auto-import
AUTO_IMPORT_CLAUDE_ON_START=true
AUTO_IMPORT_CLAUDE_PATH=~/.claude/projects
AUTO_IMPORT_CODEX_ON_START=true
AUTO_IMPORT_CODEX_PATH=~/.codex
# Query-time auto-import (keeps memory fresh between server restarts)
AUTO_IMPORT_ON_QUERY=true
AUTO_IMPORT_MIN_INTERVAL_SECONDS=45
